# ---------- ConfigMap ----------
apiVersion: v1
kind: ConfigMap
metadata:
  name: otel-collector-config
  namespace: observability-one-gate-payment
data:
  otel-collector-config: |
    receivers:
      otlp:
        protocols:
          http:                      # ⇐ HANYA OTLP‑HTTP
            endpoint: 0.0.0.0:4318   # Port tunggal yang dibuka

    processors:
      memory_limiter:
        check_interval: 1s
        limit_mib: 1024
      batch:
        timeout: 1s
        send_batch_size: 1024
      resourcedetection:
        detectors: [env, system]
        timeout: 2s
      attributes:
        actions:
          - key: environment
            value: "production"
            action: insert

    exporters:
      logging:
        verbosity: detailed
      otlp:
        endpoint: tempo.observability-one-gate-payment:4317
        tls:
          insecure: true
      otlp/metrics:
        endpoint: mimir.observability-one-gate-payment:8888
        tls:
          insecure: true

    service:
      # Matikan telemetry internal → tak ada port 8888
      telemetry:
        metrics:
          level: "none"

      pipelines:
        traces:
          receivers: [otlp]
          processors: [memory_limiter, batch, resourcedetection, attributes]
          exporters: [otlp, logging]
        metrics:
          receivers: [otlp]
          processors: [memory_limiter, batch, resourcedetection, attributes]
          exporters: [otlp/metrics, logging]

---
# ---------- Deployment ----------
apiVersion: apps/v1
kind: Deployment
metadata:
  name: otel-collector
  namespace: observability-one-gate-payment
spec:
  replicas: 1
  selector:
    matchLabels:
      app: otel-collector
  template:
    metadata:
      labels:
        app: otel-collector
    spec:
      containers:
        - name: otel-collector
          image: otel/opentelemetry-collector-contrib:0.96.0
          args:
            - --config=/conf/otel-collector-config.yaml
          ports:
            - containerPort: 4318   # ⇐ SATU‑SATUNYA port yang diekspos ke luar pod
              name: otlp-http
          resources:
            requests:
              cpu: 200m
              memory: 400Mi
            limits:
              cpu: 1000m
              memory: 2Gi
          volumeMounts:
            - name: otel-collector-config-vol
              mountPath: /conf
      volumes:
        - name: otel-collector-config-vol
          configMap:
            name: otel-collector-config
            items:
              - key: otel-collector-config
                path: otel-collector-config.yaml

---
# ---------- Service ----------
apiVersion: v1
kind: Service
metadata:
  name: otel-collector
  namespace: observability-one-gate-payment
spec:
  selector:
    app: otel-collector
  type: ClusterIP
  ports:
    - name: otlp-http
      port: 4318
      targetPort: 4318
      protocol: TCP
